<%- include('../partials/header', { title: 'Products' }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Products</h2>
  <a href="/products/new" class="btn btn-success">Add Product</a>
</div>

<table class="table table-striped table-hover align-middle">
  <thead class="table-success">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Supplier</th>
      <th style="width: 150px;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (products.length === 0) { %>
      <tr><td colspan="5" class="text-center">No products found</td></tr>
    <% } else { %>
      <% products.forEach(product => { %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price.toLocaleString('en-US', { style: 'currency', currency: 'USD' }) %></td>
          <td><%= product.quantity %></td>
          <td><%= product.supplier ? product.supplier.name : 'N/A' %></td>
          <td>
            <a href="/products/<%= product._id %>/edit" class="btn btn-sm btn-warning me-1">Edit</a>
            <form action="/products/<%= product._id %>?_method=DELETE" method="POST" class="d-inline delete-form">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<%- include('../partials/footer') %>