<%- include('../partials/header', { title: 'Suppliers' }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Suppliers</h2>
  <a href="/suppliers/new" class="btn btn-primary">Add Supplier</a>
</div>

<table class="table table-striped table-hover align-middle">
  <thead class="table-primary">
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th style="width: 150px;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (suppliers.length === 0) { %>
      <tr><td colspan="4" class="text-center">No suppliers found</td></tr>
    <% } else { %>
      <% suppliers.forEach(supplier => { %>
        <tr>
          <td><%= supplier.name %></td>
          <td><%= supplier.address %></td>
          <td><%= supplier.phone %></td>
          <td>
            <a href="/suppliers/<%= supplier._id %>/edit" class="btn btn-sm btn-warning me-1">Edit</a>
            <form action="/suppliers/<%= supplier._id %>?_method=DELETE" method="POST" class="d-inline delete-form">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<%- include('../partials/footer') %>